@model Game

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img width="200" height="200" src="@Model.ImageThumbnailUrl" alt="image not found">
        <div class="caption">
            <h3 class="pull-right">$@Model.Price</h3>
            <h3>
                <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
        </div>
        <div class="addToCart" >
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-id="@Model.Id">Add to Cart</a> 
            </p>
        </div>
    </div>
</div>